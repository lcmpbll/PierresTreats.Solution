@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

@using (Html.BeginForm())
{
  
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  
  @Html.LabelFor(model => model.Calories)
  @Html.EditorFor(model => model.Calories)
  
  @Html.Label("Select Treat to associate with this flavor")
  @Html.DropDownList("TreatId")
  
  <input type="submit" value="Add new flavor" class="btn btn-default"/>
}